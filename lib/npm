#!/usr/bin/env bash

npm_packages=(babel-cli babel-preset-es2015 bower disc eslint express generator-gulp-webapp github-labels gulp iectrl jsdoc live-server mocha node-sass npm-check-updates pm2 tldr yeoman-generator yo)

# Install node packages
run_npm() {
	for i in "${npm_packages[@]}"; do
    	if [ ! $( npm -j -g --depth=0 ls $i | jq -r '.[][] .version' ) ]; then
    		e_process "Installing $i"
			npm install -g $i
		else
			e_warning "$i already installed"
		fi
	done
}
