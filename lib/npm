#!/usr/bin/env bash

npm_packages=(bower browserify disc divshot-cli eslint express generator-gulp-webapp grunt-cli gulp iectrl imagemin jspm live-server nodemon npm-check-updates pageres psi pulldown serve tldr yeoman-generator yo)

# Install node packages
run_npm() {

	#get version npm -j -g ls *** | jq -r '.[][] .version'

	for i in "${npm_packages[@]}"; do
    	if [ ! $( npm -j -g --depth=0 ls $i | jq -r '.[][] .version' ) ]; then
    		e_process "Installing $i"
			npm install -g $i
		else
			e_warning "$i already installed"
		fi
	done
}
